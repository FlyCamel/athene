<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:civ="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="132dip"
    android:background="@color/list_item_background_normal"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/ll_user_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/user_center_bg"
        android:gravity="center_vertical"
        android:visibility="visible" >

        <com.athene.widgets.CircleImageView
            android:id="@+id/iv_avatar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/space_20"
            android:contentDescription="@null"
            android:src="@drawable/widget_dface"
            civ:border_color="@color/white"
            civ:border_width="2dip" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_avatar"
            android:layout_marginTop="17dip"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="空心菜"
                android:textColor="@color/main_gray"
                android:textSize="@dimen/text_size_16"/>

            <ImageView
                android:id="@+id/iv_expand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dip"
                android:src="@drawable/ic_expand" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>